{
	"name": "helpyourstore",
	"private": true,
	"scripts": {
		"kill-ports": "kill-port --port 3000,3001",
		"start": "pnpm kill-ports && pnpm -r --parallel dev",
		"prettier": "prettier --plugin-search-dir=. .",
		"eslint": "eslint --ignore-path .gitignore --cache .",
		"lint": "pnpm -r check --stream && pnpm prettier -- --write && pnpm eslint -- --fix",
		"lint:nofix": "pnpm eslint && pnpm prettier -- --check && pnpm -r check"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "5.13.0",
		"@typescript-eslint/parser": "5.13.0",
		"eslint": "8.10.0",
		"eslint-config-airbnb-base": "15.0.0",
		"eslint-config-prettier": "8.4.0",
		"eslint-plugin-import": "2.25.4",
		"kill-port": "1.6.1",
		"prettier": "2.5.1",
		"typescript": "4.5.5"
	}
}